<Page x:Class="TurBuroDb.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurBuroDb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auto">

    <Grid>
        <StackPanel>
            <TextBlock Text="Страница авторизации"/> 
            <GroupBox Header="Введите логин">
                <TextBox Name="TBAutoLogin" Width="250" HorizontalAlignment="Left"/>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="PBAutoPassword" Width="250" HorizontalAlignment="Left"/>
            </GroupBox>
            <Button Content="Авторизация" Name="BtnAuto" Click="BtnAuto_Click"/> 
            <Button Content="Вернуться на главную страницу" Click="Button_Click"/> 
        </StackPanel>
    </Grid>
</Page>
