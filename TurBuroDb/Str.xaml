<Page x:Class="TurBuroDb.Str"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurBuroDb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Str">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Введте название тура" Margin="10,0,0,0"/>
            <TextBox Name="TBName"/>
            <TextBlock Text="Введте цену тура" Margin="10,0,0,0"/>
            <TextBox Name="TBCena"/>
            <TextBlock Text="Выбирите  страну" Margin="10,0,0,0"/>
            <ComboBox Name="CBStrana"/>
            <TextBlock Text="Выбирите  вида тура" Margin="10,0,0,0"/>
            <ComboBox Name="CBVid"/>
            <TextBlock Text="Выбирите вид питания" Margin="10,0,0,0"/>
            <ComboBox Name="CBPit"/>
            <TextBlock Text="Выбирите вид проживания" Margin="10,0,0,0"/>
            <ComboBox Name="CBProj"/>
            <TextBlock Text="Выбирите код клиента" Margin="10,0,0,0"/>
            <ComboBox Name="CBKL"/>
            <Button Name="Dobavit" Content="Добавить запись" Margin="5,10,0,0" Click="Dobavit_Click"/>
            <Button Name="BAdmin" Content="Вернуться" Margin="5,10,0,0" Click="BAdmin_Click"/>
        </StackPanel>
    </Grid>
</Page>
