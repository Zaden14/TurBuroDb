<Page x:Class="TurBuroDb.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurBuroDb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="ProsmotrUs" Content="Просмотра туров" Width="170" Click="ProsmotrUs_Click"/>
            <Button Name="ProsmotrTyr" Content="Просмотра пользователей" Width="150" Click="ProsmotrTyr_Click" />
            <Button Name="Redaktor" Content="Редактирование"  Width="150" Click="Redaktor_Click"/>
            <Button Name="Profil" Content="Профиль" Width="150" Height="50" VerticalAlignment="Top" Click="Profil_Click"></Button>
            <Button Name="Exit" Content="Выход" Width="150" Click="Exit_Click"/>
        </StackPanel>
        <Frame Name="FrmList" Grid.Row="1"/>
    </Grid>
</Page>