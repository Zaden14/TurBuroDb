<Page x:Class="TurBuroDb.Prosmotr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurBuroDb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Prosmotr">

    <Grid>
        <DataGrid Name="dgUsers">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="cID" Header="IDUser" Binding="{Binding IDUser}"/>
                <DataGridTextColumn x:Name="cName" Header="Имя" Binding="{Binding Имя}"/>
                <DataGridTextColumn x:Name="cSur" Header="Фамилия" Binding="{Binding Фамилия}"/>
                <DataGridTextColumn x:Name="cPol" Header="Пол" Binding="{Binding Пол.Пол}"/>
                <DataGridTextColumn x:Name="cLog" Header="Логин" Binding="{Binding Логин}"/>
                <DataGridTextColumn x:Name="cPass" Header="Пароль" Binding="{Binding Пароль}"/>
                <DataGridTextColumn x:Name="cRol" Header="Роль" Binding="{Binding Роли.Роль}"/>
                <DataGridTextColumn x:Name="cDol" Header="Должность" Binding="{Binding Должность.НазваниеДолжности}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
